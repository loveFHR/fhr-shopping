<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fhr.mapper.BrandMapper">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,name,logo,create_time,update_time,is_deleted
    </sql>

    <select id="findAll" resultType="com.fhr.model.entity.product.Brand">
        select <include refid="columns" />
        from brand
        where is_deleted = 0
        order by id desc
    </select>


</mapper>